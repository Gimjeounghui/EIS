<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kun.eis.user.business.service.BusinessMapper">
    
    <!-- 업무 리스트 쿼리 -->
    <select id="selectWorkList" resultType="workVO" parameterType="workVO">
    
    	SELECT 	  w_no
    			, w_title
    			, w_content
    			, w_file
    			, w_file_path
    			, w_created_ate
    			, w_updated_ate
    			, w_deleted_ate
    			, m_email
    	
    	FROM WORK		
    
    </select>
    <select id="workList">
   		 select *
   		 from WORK 
    </select>

	<select id="workDetail" resultType="WorkVO">
		select *
		from WORK
		where w_no = #{w_no} 
	</select>
	
	<update id="workUpdate">
		update WORK
		set w_title = #{w_title}, w_content = #{w_content}
		where w_no = #{w_no} </update>
	
	<delete id="workDelete">
		delete from WORK
		where w_no = #{w_no} 
	</delete>

</mapper>
